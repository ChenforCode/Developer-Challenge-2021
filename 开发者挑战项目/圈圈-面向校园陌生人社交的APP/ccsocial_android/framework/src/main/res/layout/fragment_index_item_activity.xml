<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_activity_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.outman.framework.view.RoundImageView
        android:id="@+id/img_activity_item"
        app:c_radius="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_activity_item_test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_label_activity_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一起打篮球吧~"
                android:textColor="@color/colorFontBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_pnum_activity_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数：3/5"
                android:textSize="12sp"
                android:textColor="@color/colorFontGray" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_pos_activity_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="地点：西北体育场"
            android:textSize="12sp"
            android:textColor="@color/colorFontGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_date_activity_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="@color/colorFontGray"
                android:textSize="12sp"
                android:text="时间：10月29日 14:00" />

            <TextView
                android:id="@+id/text_status_activity_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="未开始"
                android:textSize="12sp"
                android:textColor="@color/colorStateGreen" />

            <TextView
                android:id="@+id/btn_into_activity_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_blue_10dp"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="进圈"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>