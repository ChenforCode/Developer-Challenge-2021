<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_contact_list_item_selecter"
    android:minHeight="40dip" >

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/empty"
        android:scaleType="fitStart"
        android:src="@drawable/ic_secretary" />

    <TextView
        android:id="@+id/tv_func_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/img_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="系统功能"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tab_new_msg_label"
        android:layout_toEndOf="@id/tv_func_name"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_size_22"
        android:layout_height="@dimen/dp_size_22"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dip"
        android:background="@drawable/nim_g_unread_badge"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone"
         />

<!--    <View-->
<!--        android:id="@+id/bottomLine"-->
<!--        style="@style/horizontal_light_thin_divider"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginEnd="5dp"-->
<!--        android:layout_toEndOf="@id/img_head" />-->

</RelativeLayout>